<div class="row" id="entity-name">
  <div class="col">
    <%= entity_link(entity) %>
  </div>
</div>

<div id="entity-blurb-wrapper" class="row">
  <div class="col">
    <% if user_signed_in? && controller.controller_name == 'entities' && controller.action_name == 'show' %>
      <%= render partial: 'editable_blurb', locals: { entity: entity } %>
    <% else %>
      <span id="entity-blurb-text"><%= entity.blurb %></span>
    <% end %>
  </div>
</div>

