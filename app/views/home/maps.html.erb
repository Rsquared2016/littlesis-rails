<% content_for(:page_title, "Your maps") %>

<div class="row">
  <h1>Your Maps</h1>
</div>

<div class="row">
  <table id="user-maps-table" class="display" style="width:100%"></table>
</div>

<script>
 var userMaps = <%= raw UserMapsPresenter.new(current_user).render %>;
 
 $(function(){
   $('#user-maps-table').DataTable( {
     "data": userMaps,
     "lengthChange": false,
     "pageLength": 15,
     "columns": [
       { title: "Title" },
       { title: "Updated At" },
     ]
   });
 });
</script>
