<div class="mt-3">
  <%= form_with url: external_entity_path(@external_entity), method: :patch do %>
    <div class="form-group">
      <%= label_tag :name, "Name" %>
      <%= text_field :entity, :name, value: @external_entity.display_information.fetch('Name') %>
    </div>
    <div class="form-group">
      <%= label_tag :blurb, 'Blurb' %>
      <%= text_field :entity, :blurb %>
    </div>
    <%= submit_tag "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
